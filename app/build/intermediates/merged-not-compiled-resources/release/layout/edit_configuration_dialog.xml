<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:measureMargin="true"
    app:measureWith="none"
    app:resizeChildren="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="877px"
        android:layout_height="609px"
        android:layout_centerInParent="true"
        android:background="@drawable/edit_config_popup">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/ok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="86px"
                android:layout_height="86px"
                android:src="@drawable/configuration_ic_two" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/gilroy_semi_bold"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="@string/ac82"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="130px"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@drawable/interval_bg"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingHorizontal="@dimen/_15sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <TextView
            android:id="@+id/ok"
            android:layout_width="396px"
            android:layout_height="133px"
            android:background="@drawable/effect_ok"
            android:fontFamily="@font/gilroy_semi_bold"
            android:gravity="center"
            android:lines="1"
            android:text="@string/ac41"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="62px"
            android:layout_height="62px"
            android:layout_margin="30px"
            android:src="@drawable/effect_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
