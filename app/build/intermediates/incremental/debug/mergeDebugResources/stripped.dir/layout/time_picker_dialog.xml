<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:measureMargin="true"
    app:measureWith="none"
    app:resizeChildren="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="913px"
        android:layout_height="696px"
        android:layout_centerInParent="true"
        android:background="@drawable/popup_time_picker">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/msg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <NumberPicker
                android:id="@+id/numpicker_hours"
                android:layout_width="150px"
                android:layout_height="350px"
                android:theme="@style/AppTheme.Picker"
                app:layout_constraintBottom_toTopOf="@+id/cancel"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" : "
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintBottom_toTopOf="@+id/cancel"
                app:layout_constraintEnd_toStartOf="@+id/numpicker_minutes"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/numpicker_hours"
                app:layout_constraintTop_toTopOf="parent" />

            <NumberPicker
                android:id="@+id/numpicker_minutes"
                android:layout_width="150px"
                android:layout_height="350px"
                android:theme="@style/AppTheme.Picker"
                app:layout_constraintBottom_toTopOf="@+id/cancel"
                app:layout_constraintEnd_toStartOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" : "
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintBottom_toTopOf="@+id/cancel"
                app:layout_constraintEnd_toStartOf="@+id/numpicker_seconds"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/numpicker_minutes"
                app:layout_constraintTop_toTopOf="parent" />

            <NumberPicker
                android:id="@+id/numpicker_seconds"
                android:layout_width="150px"
                android:layout_height="350px"
                android:theme="@style/AppTheme.Picker"
                app:layout_constraintBottom_toTopOf="@+id/cancel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/gilroy_semi_bold"
            android:gravity="center"
            android:lines="2"
            android:text="@string/ac45"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/ok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="396px"
            android:layout_height="133px"
            android:background="@drawable/effect_ok"
            android:fontFamily="@font/gilroy_semi_bold"
            android:gravity="center"
            android:lines="1"
            android:text="@string/ac44"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/msg" />

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="62px"
            android:layout_height="62px"
            android:layout_margin="30px"
            android:src="@drawable/effect_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
